{% extends "layout.njk" %}

{% block content %}
  <h1>{{ title }}</h1>
  <p>{{ description }}</p>
  {% if gallery %}
    <h2>Gallery</h2>
    <div class="gallery-grid">
      {% for image in gallery %}
        <a href="/assets/Diverxo/{{ image }}" target="_blank">
          <img src="/assets/Diverxo/{{ image }}" alt="Diverxo Dish {{ loop.index }}">
        </a>
      {% endfor %}
    </div>
  {% endif %}
{% endblock %}
